{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar C++",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compilando el código C++."
    },
    {
      "label": "Ejecutar C++",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Ejecutando el código C++."
    }
  ]
}
